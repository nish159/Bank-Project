using System;
using System.IO;

namespace dataAccess
{
    //common naming convention for interfaces are capital 'I'
    public interface IData
    {
        void getAllAccounts();
        void getAllAccountForUser();
    }
    //: = implement I data
    public class Data : IData
    {
        public void getAllAccounts()
        {
            var path = "C:\\Users\\user\\ATMProject\\accounts.json";

            var fs = new FileStream(path, FileMode.Open, FileAccess.Read);
            var sr = new StreamReader(fs, System.Text.Encoding.UTF8);

            string content = sr.ReadToEnd();

            Console.WriteLine(content);
        }

        public void getAllAccountForUser()
        {
            var path = "C:\\Users\\user\\ATMProject\\customer1.json";

            var fs = new FileStream(path, FileMode.Open, FileAccess.Read);
            var sr = new StreamReader(fs, System.Text.Encoding.UTF8);

            string content = sr.ReadToEnd();

            Console.WriteLine(content);
        }
    }
}
